{
  "kind": "collectionType",
  "collectionName": "profiles",
  "info": {
    "name": "Profile",
    "description": "Uygulama kullanıcı profili."
  },
  "options": {
    "increments": true,
    "timestamps": [
      "createdAt",
      "updatedAt"
    ],
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 15
    },
    "lastName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 15
    },
    "user": {
      "via": "profile",
      "plugin": "users-permissions",
      "model": "user"
    },
    "profilePhoto": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "role": {
      "type": "enumeration",
      "enum": [
        "TEST",
        "PILOT",
        "CONTROL",
        "ADMIN"
      ],
      "default": "PILOT",
      "enumName": "UserRole",
      "required": true
    },
    "phoneNumber": {
      "type": "string",
      "minLength": 12,
      "maxLength": 24,
      "unique": true,
      "regex": "^([+]?[\\s0-9]+)?(\\d{3}|[(]?[0-9]+[)])?([-]?[\\s]?[0-9])+$"
    },
    "hasSeenTutorial": {
      "type": "boolean",
      "default": false
    },
    "hasSeenIntroductoryVideo": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "bio": {
      "type": "richtext",
      "minLength": 125,
      "maxLength": 350
    },
    "uid": {
      "type": "string",
      "unique": true
    }
  }
}
